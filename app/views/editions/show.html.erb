<h1>Editions</h1>

<dl>
  <dt>Title:</dt>
  <dd><%= @edition.title %></dd>
  <dt>Desc:</dt>
  <dd><%= @edition.desc %></dd>
  <dt>Number:</dt>
  <dd><%= @edition.number %></dd>
  <dt>Distribution:</dt>
  <dd><%= @edition.distribution %></dd>
  <dt>Issue:</dt>
  <dd>
    <% if @edition.issue.previewable? %>
      <%= image_tag @edition.issue.preview(resize_to_fit: [500, 500]) %>
    <% else %>
      <%= @edition.issue.filename %>
    <% end %>
  </dd>
</dl>
<%= link_to 'Edit', edit_edition_path(@edition) %> |
<%= link_to 'Back', editions_path %>
