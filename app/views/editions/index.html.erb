<h1><%= t('edition.header.index') %></h1>

<%= form_tag(editions_url, method: :get) do %>
  <%= text_field_tag :query, params[:query], placeholder: t('edition.index.search.query') %>
  <%= submit_tag t('edition.index.search.submit') %>
<% end %>

<table class="table table-striped table-hover table-sm">
  <thead>
  <tr>
    <th scope="col"><%= t('edition.index.title') %></th>
    <th scope="col"><%= t('edition.index.description') %></th>
    <th scope="col"><%= t('edition.index.number') %></th>
    <th scope="col"><%= t('edition.index.distribution') %></th>
    <th scope="col"><%= t('edition.index.issue') %></th>
    <th colspan="3" scope="col"></th>
  </tr>
  </thead>

  <tbody>
  <% @editions.each do |edition| %>
    <tr>
      <td><%= edition.title %></td>
      <td><%= edition.description %></td>
      <td><%= edition.number %></td>
      <td><%= edition.distribution %></td>
      <td><%= edition.issue.filename %></td>
      <td><%= link_to t('edition.link.show'), edition %></td>
      <td><%= link_to t('edition.link.edit'), edit_edition_path(edition) %></td>
      <td><%= link_to t('edition.link.destroy'), edition,
                      method: :delete, data: { turbo_method: :delete, turbo_confirm: t('delete.confirm') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to t('edition.link.new'), new_edition_path %>
